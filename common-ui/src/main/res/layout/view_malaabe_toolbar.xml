<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="androidx.appcompat.widget.Toolbar"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbarHeight"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:background="@drawable/bg_main_gradient"
    >

    <ImageView
      android:id="@+id/toolbarBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/toolbarBackMarginStart"
      android:padding="4dp"
      android:src="@drawable/ic_arrow_back"
      app:layout_constraintBottom_toBottomOf="@+id/malaabeToolbarTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/malaabeToolbarTitle"
      />

    <ImageView
      android:id="@+id/malaabeToolbarLogout"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_marginEnd="16dp"
      android:src="@drawable/ic_logout"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible"
      />

    <TextView
      android:id="@+id/malaabeToolbarTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-light"
      android:gravity="center"
      android:letterSpacing="0.05"
      android:minHeight="110dp"
      android:textColor="@color/toolbarText"
      android:textSize="26sp"
      app:layout_constraintBottom_toBottomOf="@+id/malaabeToolbarLogout"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/malaabeToolbarLogout"
      tools:text="MALAABE"
      />
  </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
