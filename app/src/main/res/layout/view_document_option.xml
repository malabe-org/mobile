<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/sellOptionRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottomNavigationHeight"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <LinearLayout
        android:id="@+id/sellOptionBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center"
        android:background="@drawable/bg_document_button"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ic_sell"
            app:layout_constraintTop_toTopOf="@+id/lightToolbarTitle"
            app:layout_constraintBottom_toBottomOf="@+id/lightToolbarTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/lightToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuDocument"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </LinearLayout>
</FrameLayout>
